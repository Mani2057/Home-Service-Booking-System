<!DOCTYPE html>
<html>
<head>
  <title>My Bookings</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
  <div class="container mt-4">
     <!-- Back Arrow -->
     <a href="/dashboard" class="btn btn-link text-decoration-none mb-3">
      &#8592; Back
    </a>
    <h2>My Bookings</h2>

    <% if (bookings.length === 0) { %>
      <p>No bookings found.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Address</th>
            <th>Timing</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach((booking, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= booking.name %></td>
              <td><%= booking.address %></td>
              <td><%= booking.timing %></td>
              <td>
                <a href="/my-bookings/edit/<%= booking._id %>" class="btn btn-sm btn-warning">Edit</a>
                <form action="/my-bookings/delete/<%= booking._id %>" method="POST" style="display:inline-block;">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
