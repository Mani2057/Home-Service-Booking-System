<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Now</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/booking.css">
  <!-- Bootstrap + Google Fonts + Icons -->
    <!-- Bootstrap, Google Fonts, Icons, SweetAlert -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 
</head>
<body>

  <div class="booking-card">
    <a href="/dashboard" class="back-btn">
      <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
    </a>

    <h2><i class="bi bi-calendar2-check-fill text-primary"></i> Book Your Slot</h2>

    <form id="bookingForm" action="/booking" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name" required>
      </div>

      <div class="mb-3">
        <label for="address" class="form-label">Full Address</label>
        <input type="text" name="address" id="address" class="form-control" placeholder="Enter your address" required>
      </div>

      <div class="mb-4">
        <label for="timing" class="form-label">Booking Date & Time</label>
        <input type="datetime-local" name="timing" id="timing" class="form-control" required>
      </div>

      <button type="submit" class="btn-submit" id="submitBtn">Confirm Booking</button>

      <div class="spinner" id="spinner">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Please wait...</p>
      </div>
    </form>
  </div>

  <script>
    const form = document.getElementById('bookingForm');
    const spinner = document.getElementById('spinner');
    const submitBtn = document.getElementById('submitBtn');

    form.addEventListener('submit', function (e) {
      e.preventDefault(); // Prevent form submission

      spinner.style.display = 'block';
      submitBtn.disabled = true;

      // Simulate network delay
      setTimeout(() => {
        spinner.style.display = 'none';

        Swal.fire({
          icon: 'success',
          title: 'Booking Confirmed!',
          text: 'Your slot has been successfully booked.',
          confirmButtonColor: '#5a67d8'
        }).then(() => {
          form.submit(); // Now actually submit the form
        });
      }, 1500);
    });
  </script>

</body>
</html>
